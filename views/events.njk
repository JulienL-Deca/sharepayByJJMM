{% extends "layout.njk" %}



{% block content %}


<div class="container">
  <h1>Welcome {{user}}! Here is the list of the events you created...</h1>
  <div class="row">
    <div class="col-4">
      <p>create a new event</p>
    </div>
    <div class="col-4">
    </div>
    <div class="col-4">
      <p>Show participant(s) / Add participant(s)</p>
    </div>

  </div>
  <div class="row">
    {% for oneEvent in events %}
    {% if oneEvent.status === true %}
    <div class="event-active card col-4 bg-info">
      <div class="card-body">
        <p class="card-text"><a href="/event/{{oneEvent.id}}">{{oneEvent.name}} <i class="fas fa-search"></i></a></p>
      </div>
    </div>
    {% else %}
    <div class="event-finished card col-4 bg-secondary">
      <div class="card-body">
        <p class="card-text"><a href="/event/{{oneEvent.id}}">{{oneEvent.name}} <i class="fas fa-chart-bar"></i></a></p>
      </div>
    </div>
    {% endif %}
    {% endfor %}
  </div>
  {% endblock content %}
