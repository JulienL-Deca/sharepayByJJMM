{% extends "layout.njk" %}



{% block content %}


  <div class="container">
    <h1>Welcome {{user}}! Here is the list of the events you created...</h1>
    <div class="row">
      <div class="col-4">

      </div>

      <div class="col-4">

      </div>

      <div class="col-4">

      </div>
    </div>

    {% for oneEvent in events %}
        <div class="card col-4">
