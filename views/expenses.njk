  }


  </style>



</br>

<div class="container">
  <div class="row">
    <div class="col">
      <button type="button" class="btn btn-info btn-lg mr-auto" onclick="window.location.href='../userevents'">Back to Event</button>
    </div>
    <div class="col-6">
      <div class="container">
        <div class="row">
          <div class="col-12 d-flex">
            <div class="col p-0 card card-horizontal text-white">
              <img class="card-img-top card-img-horizontal" src="https://www.scienceabc.com/wp-content/uploads/2017/02/Thailand-beach-sand.jpg" height="150" width="150" alt="">
              <a class="card-link" href="#"></a>
              <div class="card-img-overlay d-flex flex-column justify-content-between">
                <p class="card-text text-uppercase text-shadow">
                  <h3>{{expenses[0].name}}</h3>
                </p>
                <p class="card-text text-white text-shadow align-bottom">
                  Equal Pay, Share More!
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </br>


  </div>
  <div class="col">


    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">&nbsp;&nbsp;New Expense&nbsp;</button>

    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Add a new expense</h4>
          </div>
          <div class="modal-body">



            <form action="./{{expenses[0].id}}/submitexpense" method="post" id="expense">
              <div class="form-group">
                <label for="description">New expense's name</label>
                <input type="text" class="form-control" name="description" placeholder="Description">
              </div>

              <div class="form-group">
                <label for="amount">How much ?</label>
                <input type="number" class="form-control" name="amount" placeholder="Price in €">
              </div>

              <div class="form-group">
                <label for="payer">Paid by</label>
                <select class="form-control" id="payer" name="payer">
                  <option>Select the person who paid</option>
                  {% for participant in participants %}
                  <option value="{{participant.id}}">{{participant.nickname}}</option>
                  {% endfor %}
                </select>
              </div>

              <div class="form-group">
                <label for="description">Date</label>
                <input type="date" class="form-control" id="dateExpense" name="date" value="currentDate">
              </div>
              <script>
              const date = new Date();
              const currentDate = date.toISOString().slice(0,10);
              document.getElementById("dateExpense").value = currentDate;
            </script>
            <input type="hidden" name="event_id" value="{{expenses[0].id}}">
            <button type="submit" form="expense">Add this expense to the event</button>

            </form>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>

      </div>
    </div>



  </div>
</div>
<div class="row">
  <div class="col">
    <button type="button" class="btn btn-info btn-lg mr-auto">&nbsp;Share&nbsp;</button>
  </div>
  <div class="col-9">

    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th scope="col">Paid by</th>
          <th scope="col">Date</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {% for oneExpense in expenses %}
        {% if oneExpense.description %}
        <tr>
          <td>{{oneExpense.description}}</td>
          <td>{{oneExpense.amount/100}}€</td>
          <td>{{oneExpense.nickname}}</td>
          <td>{{oneExpense.date}}</td>
          <td><i class="fas fa-edit"></i></td>
          <td><i class="far fa-minus-square"></i></td>

        </tr>
        {% endif %}
        {% endfor %}
      </tbody>
    </table>

  </div>
  <div class="col">
    <button type="button" class="btn btn-info btn-lg" onclick="window.location.href='../event/{{expenses[0].id}}/sumup'"> Sum Up </button>
  </div>
</div>
</div>

{% endblock content %}
