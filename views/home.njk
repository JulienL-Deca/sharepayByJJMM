{% extends "layoutHomepage.njk" %}

{% block content %}

<h1>Login page</h1>

<form action="/" method="post">
  <div>
    <p>{{errorMessage}}</p>
    <label>Email:</label>
    <input type="text" name="username"/><br/>
  </div>
  <div>
    <label>Password:</label>
    <input type="password" name="password"/>
  </div>
  <div>
    <button type="submit">
      Submit
    </button>
  </div>
</form>

{% endblock content %}
